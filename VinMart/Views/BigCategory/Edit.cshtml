@model VinMart.Models.BigCategory

<div class="container">
    <div class="row">
        <div class="col-lg-6 col-lg-offset-3">
            <div style="display: flex; justify-content: space-between; align-items: center">
                <h2>Edit Big Category</h2>
                @Html.ActionLink("Trang chủ", "Index", null, new { @class = "btn btn-success" });
            </div>
            <form action="/BigCategory/Edit" method="post" enctype="multipart/form-data">
                <div class="form-group" style="display: none;">
                    @Html.LabelFor(m => m.id)
                    @Html.EditorFor(m => m.id, null)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.displayName)
                    @Html.EditorFor(m => m.displayName)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.mediaURL)
                    @Html.TextBoxFor(m => m.mediaURL, new { type = "file" })
                </div>

                <button type="submit" class="btn btn-primary">Chỉnh sửa</button>
            </form>
        </div>
    </div>


</div>