@model List<VinMart.Models.BigCategory>


<div class="container">

    <div style="display: flex; justify-content: space-between; align-items: center">
        <h2>Index Big Category</h2>
        @Html.ActionLink("Create", "Create", null, new { @class="btn btn-success"})
    </div>
    <table class="table table-hover">
        <tr>
            <th>Tên: </th>
            <th>Ảnh: </th>
            <th>Sửa: </th>

        </tr>
        @foreach (var cata in Model)
        {
            <tr>
                <td>@cata.displayName</td>
                <td> <img height="200" src="@cata.mediaURL" alt="Bigcatagory" /></td>
                <td>@Html.ActionLink("Edit", "Edit", null,  new { id = cata.id, @class = "btn btn-success"})</td>
            </tr>
        }
    </table>

</div>
